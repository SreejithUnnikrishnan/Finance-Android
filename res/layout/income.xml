<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/incomeMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/incomeHeadingTextView"
        android:layout_columnSpan="3"
        android:layout_gravity="fill_horizontal"
        android:gravity="center_horizontal"
        android:text="@string/incomeHeading"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/holo_green_dark" />

    <TextView
        android:id="@+id/incomeErrorTextView"
        android:layout_column="0"
        android:layout_columnSpan="3"
        android:layout_gravity="fill_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/holo_red_dark" />
    
    <TextView
        android:id="@+id/incomeCatNameView"
        android:layout_width="110dp"
        android:layout_height="44dp"
        android:layout_gravity="left"
        android:text="@string/categoryTextName"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/holo_blue_dark" />
    
    <TextView
        android:id="@+id/incomeCatAmountView"
        android:layout_width="110dp"
        android:layout_height="44dp"
        android:layout_gravity="left"
        android:text="@string/amountTextName"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/holo_blue_dark" />
    
    <TextView
        android:id="@+id/incomeCatBudgetView"
        android:layout_width="110dp"
        android:layout_height="44dp"
        android:layout_gravity="left"
        android:text="@string/budgetTextName"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/incomeCatView1"
       android:layout_width="110dp"
        android:layout_height="44dp"
        android:layout_gravity="left"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/incomeAmtView1"
        android:layout_width="110dp"
        android:layout_height="44dp"
        android:layout_gravity="left"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/incomeBudView1"
        android:layout_height="44dp"
        android:layout_gravity="left"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/incomeCatView2"
        android:layout_height="44dp"
        android:layout_gravity="left"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/incomeAmtView2"
        android:layout_height="44dp"
        android:layout_gravity="left"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/incomeBudView2"
        android:layout_height="44dp"
        android:layout_gravity="left"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/incomeCatView3"
       android:layout_width="110dp"
        android:layout_height="44dp"
        android:layout_gravity="left"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/incomeAmtView3"
        android:layout_width="110dp"
        android:layout_height="44dp"
        android:layout_gravity="left"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/incomeBudView3"
        android:layout_width="110dp"
        android:layout_height="44dp"
        android:layout_gravity="left"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/incomeCatView4"
        android:layout_width="110dp"
        android:layout_height="44dp"
        android:layout_gravity="left"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/incomeAmtView4"
        android:layout_width="110dp"
        android:layout_height="44dp"
        android:layout_gravity="left"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/incomeBudView4"
        android:layout_width="110dp"
        android:layout_height="44dp"
        android:layout_gravity="left"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/incomeCatView5"
        android:layout_width="110dp"
        android:layout_height="44dp"
        android:layout_gravity="left"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/incomeAmtView5"
        android:layout_width="110dp"
        android:layout_height="44dp"
        android:layout_gravity="left"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/incomeBudView5"
        android:layout_width="110dp"
        android:layout_height="44dp"
        android:layout_gravity="left"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <!-- <Button
        android:id="@+id/incomeBackButton"
        android:layout_width="105dp"
        android:layout_column="2"
        android:layout_gravity="left|center_vertical"
        android:layout_row="7"
        android:text="@string/backButton" /> -->

    <Button
        android:id="@+id/incomeToReport"
        android:layout_width="wrap_content"
        android:layout_column="2"
        android:layout_gravity="left|center_vertical"
        android:layout_row="8"
        android:text="@string/incomeReportButton" />

    <Button
        android:id="@+id/incomeToExpense"
        android:layout_column="0"
        android:layout_gravity="center"
        android:layout_row="8"
        android:text="@string/incomeExpenseButton" />

    <Button
        android:id="@+id/addIncomeDetailButton"
        android:layout_width="105dp"
        android:layout_column="1"
        android:layout_gravity="left|top"
        android:layout_row="8"
        android:text="@string/addIncome_btn_text" />

    <ImageButton
        android:id="@+id/quitIncomeButton"
         android:layout_width="31dp"
        android:layout_height="27dp"
        android:layout_column="2"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="0"
        android:src="@android:drawable/ic_notification_clear_all" />

</GridLayout>